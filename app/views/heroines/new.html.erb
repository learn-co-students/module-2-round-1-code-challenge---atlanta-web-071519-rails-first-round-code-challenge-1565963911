<h1>Heroine Form</h1>

<%= form_for(@heroine) do |f| %>
    <label>Name: </label>
    <%= f.text_field :name %><br>

    <label>Super Name: </label>
    <%= f.text_field :super_name%><br>

    <label>Power: </label>
    <%= f.collection_select(:power_id, Power.all, :id, :name, prompt: true) %><br>

    <br>

    <%= f.submit "Create Heroine" %>

<% end %><br>

<div>
<% if @heroine.errors.any? %>
  <% @heroine.errors.full_messages.each do |msg| %>
    <div>ERROR: <%= msg %></div>
  <% end %>
</div>
<% end %>

<br>


<%= button_to "Go Back", heroines_path, method: :get %>
